# API settings
DEBUG=True
SECRET_KEY=random_generated_secret_key_here

# OpenAI settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_TEXT_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Weaviate settings (Optional - uncomment when needed)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# File storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Optional API integrations (uncomment when needed)
# Firecrawl settings (for e-commerce crawling)
# FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Perplexity settings (for research)
# PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database settings
DATABASE_URL=sqlite+aiosqlite:///./fashion_stylist.db

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO 